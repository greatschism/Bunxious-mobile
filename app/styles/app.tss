'Window[platform=android]': {
	windowSoftInputMode: Ti.UI.Android.SOFT_INPUT_STATE_HIDDEN,
	orientationModes : [Ti.UI.PORTRAIT],   
}

'Window[platform=ios]': {
	statusBarStyle: Titanium.UI.iPhone.StatusBar.LIGHT_CONTENT,
	orientationModes : [Ti.UI.PORTRAIT], 
}

