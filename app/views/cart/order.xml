<Alloy>
	<View id="orderItems">
		<View id="orderFromView">
			<View id="orderFromLabel">
				<Label id="orderFrom" />
				<Label id="orderFromName" />
			</View>
			<ImageView id="close"></ImageView>
		</View>
		<View id="container" />
		<Button id="contactButton" title="Contact" />
		<View id="addressFilter" class="filterWrapper topRow firstElement">
			<Label id="addressLabel" class="filterLabel" text="SELECT AN ADDRESS" />
			<View class="filterSeparator" />
			<ImageView class="filterIcon" />
		</View>
		<View class="filterWrapper topRow lastElement">
			<Button id="add_address" title="Add A New Address"/>
		</View>
		<View class="lineBreak"></View>
		<View class="orderDetails top">
			<Label id="orderItemTotal" class="orderLeft"></Label>
			<Label id="orderItemTotalPrice" class="orderRight"></Label>
		</View>
		<View class="orderDetails">
			<Label id="orderShipping" class="orderLeft"></Label>
			<Label id="orderShippingPrice" class="orderRight"></Label>
		</View>
		<View class="orderDetails">
			<Label id="orderTax" class="orderLeft"></Label>
			<Label id="orderTaxPrice" class="orderRight"></Label>
		</View>
		<View class="orderDetails">
			<Label id="orderTotal" class="orderLeft bold"></Label>
			<Label id="orderTotalPrice" class="orderRight bold"></Label>
		</View>
		<View class="lineBreak"></View>
		
		<View height="Titanium.UI.SIZE">
			<TextField id="orderOptional" onChange="txtField_Change" class="top"></TextField>
			<Label id="lblHint" text="L('add_optional_note').toUpperCase()"></Label>
		</View>
		
		<View id="checkoutWrapper"></View>
		<View class="padding"/>
	</View>
</Alloy>

