<Alloy>
	<View class="container">
		<TableView backgroundColor="#eee" class="tableview-form">

			<TableViewSection>
				<HeaderView>
					<View class="view-headerview-form" >
						<Label class="label-tableviewsection-header" text="Basic Info" />
						<View class="view-row-separator" />
					</View>
				</HeaderView>
				<Widget src="ti.ux.forms.row.text" inputType="text" title="First Name" id="firstname" />
				<Widget src="ti.ux.forms.row.text" inputType="text" title="Last Name" id="lastname" />
				<Widget src="ti.ux.forms.row.text" inputType="text" title="User Name" id="username" />
				<Widget src="ti.ux.forms.row.text" inputType="email" title="Email" id="email" />
				<Widget src="ti.ux.forms.row.optionspicker" id="country" title="Country" />
				<Widget src="ti.ux.forms.row.optionspicker" id="state" title="State" dialogType="popup" />
				<Widget src="ti.ux.forms.row.text" title="City" inputType="text" id="city" />
				<Widget src="ti.ux.forms.row.optionspicker" id="gender" title="Gender" cancel="3" options="Male|Female|Unspecified|Cancel" />
				<Widget src="ti.ux.forms.row.text" inputType="textarea" title="About You" id="about" />
				<Widget src="ti.ux.forms.row.text" inputType="url" title="Website" id="website" />
				<Widget src="ti.ux.forms.row.switch" title="Search Privacy" value="true" id="search_engines"/>
			</TableViewSection>
			<TableViewSection>
				<HeaderView>
					<View class="view-headerview-form">
						<Label class="label-tableviewsection-header" text="Social networks" />
						<View class="view-row-separator" />
					</View>
				</HeaderView>
				<Widget src="ti.ux.forms.row.switch" title="Login with Facebook" value="true" id="fieldSwitch" icon="fa-facebook-square" iconColor="#66f"/>
			</TableViewSection>
			<TableViewSection>
				<HeaderView>
					<View class="view-headerview-form">
						<Label class="label-tableviewsection-header" text="Email Notification Settings" />
						<View class="view-row-separator" />
					</View>
				</HeaderView>
				<Widget src="ti.ux.forms.row.switch" title="Group products" value="false" id="notification_group_board"/>
				<Widget src="ti.ux.forms.row.switch" title="Comments" value="false" id="notification_comment_pin" />
				<Widget src="ti.ux.forms.row.switch" title="Like" value="true" id="notification_like_pin" />
				<Widget src="ti.ux.forms.row.switch" title="Treasure Chest" value="false" id="notification_repin_pin"/>
				<Widget src="ti.ux.forms.row.switch" title="Follows" value="true" id="notification_follow_user"/>
			
				<TableViewRow>
					<View class="button_wrapper">
						<View id="saveButton" class="button">
							<Label class="buttonLabel" text="L('save')"/>
						</View>
					</View>
				</TableViewRow>
			</TableViewSection>
		</TableView>
	</View>
</Alloy>