<Alloy>
	<TableView id="postsTable" >
		<HeaderView height="Ti.UI.SIZE">
			<View layout="vertical" height="Ti.UI.SIZE">
				<SearchBar id="search" barColor="#f4f4f4" showCancel="false" height="43" top="0" />
				<View height="Ti.UI.SIZE">
					<Button id="invite" title="Invite" />
				</View>
				<View height="Ti.UI.SIZE" >
					<Button id="members" title="View Members" />
				</View>
				<View layout="horizontal"  height="Ti.UI.SIZE" top="10dp">
					<ImageView id="lockIcon" />
					<Label id="groupTypeTxt" />
				</View>
				<Label id="groupTitle" color="#00000"/>
				<Label id="description" />
				<View height="0.5dp"  top="10dp" width="Ti.UI.FILL" backgroundColor="#D0D4D9"/>
				<View class="groupWrapper">
					<Widget id="title" src="com.harkdev.stylehinttextfield" borderWidth="1dp" borderColor="#d5dae2" height="35dp" width="300dp" top="20dp" hintLeft="10dp" backgroundColor="#fff" color="#000" hintColor="#666" hintText="L('add_post').toUpperCase()" tfTop="5dp" tfWidth="220dp" />
				</View>
			</View>
		</HeaderView>
	</TableView>
</Alloy>