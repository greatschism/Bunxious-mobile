<Alloy>
	<TableView id="postsTable" >
		<HeaderView height="Ti.UI.SIZE">
			<View layout="vertical" height="Ti.UI.SIZE">
				<View height="Ti.UI.SIZE">
					<Button id="invite" title="Invite" />
				</View>
				<View height="Ti.UI.SIZE" >
					<Button id="members" title="View Members" />
				</View>
				<View height="Ti.UI.SIZE">
					<Button id="editGroup" title="Edit" />
				</View>
				<View id="filterWrapper">
					<View id="filterSection">
						<View id="categoryFilter" class="filterWrapper topRow firstElement">
							<Label id="categoryLabel" class="filterLabel" text="L('all_items')" />
							<View class="filterSeparator" />
							<ImageView class="filterIcon" />
						</View>
						<View id="brandFilter" class="filterWrapper topRow centerElement">
							<Label id="brandLabel" class="filterLabel" text="L('brand')" />
							<View class="filterSeparator" />
							<ImageView class="filterIcon" />
						</View>
						<View id="genderFilter" class="filterWrapper topRow lastElement">
							<Label id="genderLabel" class="filterLabel" text="L('gender')" />
							<View class="filterSeparator" />
							<ImageView class="filterIcon" />
						</View>
						<View id="sizeFilter" class="filterWrapper botRow firstElement">
							<Label id="sizeLabel" class="filterLabel" text="L('size')" />
							<View class="filterSeparator" />
							<ImageView class="filterIcon" />
						</View>
						<View id="priceFilter" class="filterWrapper botRow centerElement">
							<Label id="priceLabel" class="filterLabel" text="L('price')" />
							<View class="filterSeparator" />
							<ImageView class="filterIcon" />
						</View>
						<View id="resetFilter" class="filterWrapper botRow lastElement">
							<Button id="resetButton" title="Reset"/>
						</View>
					</View>
				</View>
				
				<View layout="horizontal"  height="Ti.UI.SIZE" top="5dp"  left="10dp" width="100%">
					<ImageView id="lockIcon" />
					<Label id="groupTypeTxt" />
				</View>
				<View layout="vertical" height="Ti.UI.SIZE"  left="10dp"width="100%">
					<Label id="groupTitle" color="#000000"/>
					<Label id="description" />
				</View>
				<View height="0.5dp"  left="10dp" top="10dp" width="Ti.UI.FILL" backgroundColor="#D0D4D9"/>
				<View class="groupWrapper">
					<Widget id="title" src="com.harkdev.stylehinttextfield" borderWidth="1dp" borderColor="#d5dae2" height="35dp" width="300dp" top="20dp" hintLeft="10dp" backgroundColor="#fff" color="#000" hintColor="#666" hintText="L('add_post')" tfTop="5dp" tfWidth="220dp" />
					<View class="groupWrapper" top = "60dp">
						<ImageView id="cameraIcon"></ImageView>
						<ImageView id="postImage"></ImageView>
						<View height="Ti.UI.SIZE" width="100dp" right="10dp">
							<Button id="postInGroup" title="Post" />
						</View>
					</View>
				</View>
			</View>
		</HeaderView>
	</TableView>
</Alloy>