		<Label class="label-row-title-text" id="titleLbl" />

		<TextField class="textfield-row-control-text" id="field" onBlur="validate" onFocus="hideValidationError"/>
		
		<ActivityIndicator id="actInd" class="activityindicator-forms-text"/>

		<Widget src="ti.ux.iconfont" id="alertIcon" right="10" icon="fa-exclamation-triangle" iconColor="#900"  zIndex="99" />
		
		<View class="view-row-separator" />
		
	</TableViewRow>
</Alloy>


