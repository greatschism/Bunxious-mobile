<Alloy>
	<View id="container" class="view-height-fit">
		
		<View class="view-forms-text-container" onClick="focus" id="view">
			<ActivityIndicator id="actInd" class="activityindicator-forms-text"/>
			<ImageView id="alertImage" class="image-forms-text-alert" />
			<Label id="titleLbl" class="label-forms-text-title" />
			<View class="view-forms-text-separator"/>
			<TextField id="field" class="textfield-forms-text" onChange="hideValidationError"/>
		</View>
		
		<Label id="tipText" class="label-forms-text-tiptext" />
		<Label id="errorText" class="label-forms-text-errortext" />
	</View>
</Alloy>


